{
  "name": "procurement-backend",
  "version": "1.0.0",
  "description": "Backend API for Procurement & Supplier Database System",
  "main": "src/index.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "PUPPETEER_SKIP_DOWNLOAD=false PUPPETEER_PRODUCT=chrome node node_modules/puppeteer/install.mjs && npx tsc && cp -r src/utils/assets dist/utils/assets",
    "start": "node dist/index.js",
    "db:generate": "npx drizzle-kit generate",
    "db:migrate": "npx drizzle-kit migrate",
    "db:push": "npx drizzle-kit push",
    "db:seed": "tsx src/db/seed.ts",
    "db:studio": "drizzle-kit studio",
    "postinstall": "PUPPETEER_SKIP_DOWNLOAD=false PUPPETEER_PRODUCT=chrome node node_modules/puppeteer/install.mjs"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "docx-merger": "^1.2.0",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.45.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "format-num": "^1.2.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.11.0",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.12",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.17.2",
    "pg": "^8.16.3",
    "puppeteer": "^24.35.0",
    "to-words": "^4.10.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.5",
    "@types/pdfkit": "^0.17.4",
    "@types/pg": "^8.16.0",
    "@types/uuid": "^9.0.7",
    "drizzle-kit": "^0.31.8",
    "nodemon": "^3.1.11",
    "tsx": "^4.21.0"
  }
}
